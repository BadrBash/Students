@model PracticeMVC.Models.CreateStudentViewModel

@{
    ViewData["Title"] = "Create Student";
}

<h2>Create New Student</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

@if (!string.IsNullOrEmpty(ViewData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @ViewData["SuccessMessage"]
    </div>
}

<form asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ContactNumber"></label>
        <input type="text" asp-for="ContactNumber" class="form-control" />
        <span asp-validation-for="ContactNumber"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Student</button>
</form>