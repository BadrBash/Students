@model List<PracticeMVC.Models.StudentViewModel>

@{
    ViewData["Title"] = "Student List";
}

<div>
    <a href="@Url.Action("Create", "Student")" class="btn btn-primary">Create New Student</a>
</div>

@if (Model.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Contact Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.ContactNumber</td>
                    <td>
                        <a href="@Url.Action("Edit", "Student", new {Id = @item.Id})" class="btn btn-primary">Edit</a>
                        <form asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" style="display:inline-block">
                            <input type="submit" value="Delete" class="btn btn-danger">
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">No records found!</p>
}